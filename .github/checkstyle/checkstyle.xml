<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
    Checkstyle configuration for lilishop project
    Based on Google Java Style with modifications for existing codebase
-->
<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="warning"/>
    <property name="fileExtensions" value="java"/>

    <!-- 排除自动生成的文件 -->
    <module name="BeforeExecutionExclusionFileFilter">
        <property name="fileNamePattern" value="module\-info\.java$"/>
    </module>

    <!-- 文件长度检查 -->
    <module name="FileLength">
        <property name="max" value="2000"/>
        <property name="severity" value="warning"/>
    </module>

    <!-- 行长度检查 -->
    <module name="LineLength">
        <property name="max" value="200"/>
        <property name="ignorePattern" value="^package.*|^import.*|a]* href|href|http://|https://|ftp://"/>
    </module>

    <!-- 文件末尾换行 -->
    <module name="NewlineAtEndOfFile">
        <property name="severity" value="info"/>
    </module>

    <!-- Tab 字符检查 -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
        <property name="severity" value="info"/>
    </module>

    <module name="TreeWalker">
        <!-- 命名约定 -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
            <message key="name.invalidPattern" value="Package name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern" value="Type name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern" value="Member name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <module name="ParameterName">
            <property name="format" value="^[a-z]([a-zA-Z0-9]*)?$"/>
            <message key="name.invalidPattern" value="Parameter name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <module name="LocalVariableName">
            <property name="format" value="^[a-z]([a-zA-Z0-9]*)?$"/>
            <message key="name.invalidPattern" value="Local variable name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <module name="ConstantName">
            <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
            <message key="name.invalidPattern" value="Constant name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9_]*$"/>
            <message key="name.invalidPattern" value="Method name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <!-- 导入检查 -->
        <module name="AvoidStarImport">
            <property name="severity" value="warning"/>
        </module>

        <module name="RedundantImport">
            <property name="severity" value="warning"/>
        </module>

        <module name="UnusedImports">
            <property name="severity" value="warning"/>
            <property name="processJavadoc" value="false"/>
        </module>

        <!-- 代码块检查 -->
        <module name="EmptyBlock">
            <property name="option" value="TEXT"/>
            <property name="tokens" value="LITERAL_TRY, LITERAL_FINALLY, LITERAL_IF, LITERAL_ELSE, LITERAL_SWITCH"/>
            <property name="severity" value="warning"/>
        </module>

        <module name="LeftCurly">
            <property name="severity" value="info"/>
        </module>

        <module name="RightCurly">
            <property name="severity" value="info"/>
        </module>

        <module name="NeedBraces">
            <property name="severity" value="warning"/>
        </module>

        <!-- 编码问题 -->
        <module name="EmptyStatement">
            <property name="severity" value="warning"/>
        </module>

        <module name="EqualsHashCode">
            <property name="severity" value="error"/>
        </module>

        <module name="MissingSwitchDefault">
            <property name="severity" value="warning"/>
        </module>

        <module name="SimplifyBooleanExpression">
            <property name="severity" value="warning"/>
        </module>

        <module name="SimplifyBooleanReturn">
            <property name="severity" value="warning"/>
        </module>

        <!-- 类设计 -->
        <module name="OneTopLevelClass">
            <property name="severity" value="error"/>
        </module>

        <!-- 杂项 -->
        <module name="ArrayTypeStyle">
            <property name="severity" value="warning"/>
        </module>

        <module name="UpperEll">
            <property name="severity" value="warning"/>
        </module>

        <!-- 修饰符顺序 -->
        <module name="ModifierOrder">
            <property name="severity" value="info"/>
        </module>

        <!-- 空白检查 -->
        <module name="GenericWhitespace">
            <property name="severity" value="info"/>
        </module>

        <module name="WhitespaceAround">
            <property name="allowEmptyConstructors" value="true"/>
            <property name="allowEmptyLambdas" value="true"/>
            <property name="allowEmptyMethods" value="true"/>
            <property name="allowEmptyTypes" value="true"/>
            <property name="allowEmptyLoops" value="true"/>
            <property name="severity" value="info"/>
        </module>

        <!-- 注解检查 -->
        <module name="MissingOverride">
            <property name="severity" value="warning"/>
        </module>

        <!-- 禁止使用 System.out -->
        <module name="Regexp">
            <property name="format" value="System\.out\.print"/>
            <property name="illegalPattern" value="true"/>
            <property name="message" value="Avoid using System.out, use logging instead."/>
            <property name="severity" value="warning"/>
        </module>

        <!-- 禁止使用 System.err -->
        <module name="Regexp">
            <property name="format" value="System\.err\.print"/>
            <property name="illegalPattern" value="true"/>
            <property name="message" value="Avoid using System.err, use logging instead."/>
            <property name="severity" value="warning"/>
        </module>

        <!-- 禁止 e.printStackTrace() -->
        <module name="Regexp">
            <property name="format" value="\.printStackTrace\(\)"/>
            <property name="illegalPattern" value="true"/>
            <property name="message" value="Avoid using printStackTrace(), use logging instead."/>
            <property name="severity" value="warning"/>
        </module>
    </module>
</module>
